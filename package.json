{
  "name": "ide-css",
  "version": "0.3.0",
  "description": "Atom-IDE for CSS, LESS and SCSS language",
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint ./src",
    "test": "npm run lint"
  },
  "repository": "https://github.com/liuderchi/ide-css.git",
  "keywords": [
    "atom-ide",
    "css",
    "less",
    "scss",
    "style-sheet",
    "ide",
    "language-server-protocol",
    "outline-view"
  ],
  "author": "Te-Chi Liu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liuderchi/ide-css/issues"
  },
  "homepage": "https://github.com/liuderchi/ide-css#readme",
  "devDependencies": {
    "eslint": "^4.7.1"
  },
  "dependencies": {
    "atom-languageclient": "^0.9.4",
    "vscode-css-languageserver-bin": "^1.3.0"
  },
  "engines": {
    "atom": "1.3.0"
  },
  "enhancedScopes": [
    "source.css",
    "source.css.less",
    "source.css.scss"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "code-format.range": {
      "versions": {
        "0.1.0": "provideCodeFormat"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    }
  },
  "atomCommands": {
    "ide-css:help": "Provides help information and descriptions of commands."
  },
  "configSchema": {
    "additionalGrammars": {
      "type": "array",
      "title": "Register Additional Grammars (Experimental)",
      "default": [],
      "description": "Register additional css grammars such as *Sass* or *Stylus* in comma delimited format.</br>e.g. `source.css.sass, source.css.styls`."
    },
    "lessSupport": {
      "type": "boolean",
      "title": "Less Language Support",
      "default": true,
      "description": "Support files with `.less` extension."
    },
    "scssSupport": {
      "type": "boolean",
      "title": "Scss Language Support",
      "default": true,
      "description": "Support files with `.scss` extension."
    }
  }
}
